{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@strive/interfaces": ["libs/interfaces/src/index.ts"],
      "@strive/ui/*": ["libs/ui/src/lib/*"],
      "@strive/user/*": ["libs/user/src/lib/*"],
      "@strive/collective-goal/*": ["libs/collective-goal/src/lib/*"],
      "@strive/utils/*": ["libs/utils/src/lib/*"],
      "@strive/goal/*": ["libs/goal/src/lib/*"],
      "@strive/post/*": ["libs/post/src/lib/*"],
      "@strive/chat/*": ["libs/chat/src/lib/*"],
      "@strive/milestone/*": ["libs/milestone/src/lib/*"],
      "@strive/support/*": ["libs/support/src/lib/*"],
      "@strive/notification/*": ["libs/notification/src/lib/*"],
      "@strive/media/*": ["libs/media/src/lib/*"],
      "@strive/exercises/*": ["libs/exercises/src/lib/*"],
      "@strive/template/*": ["libs/template/src/lib/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
