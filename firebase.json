{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "predeploy": [
      "npx nx run backend-functions:lint",
      "npx nx run backend-functions:build"
    ],
    "source": "dist/apps/backend-functions"
  },
  "apphosting": {
    "backendId": "journal",
    "rootDir": "apps/journal",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "functions"
    ]
  }
}
